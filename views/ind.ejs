        .task {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
            
        }
        .task p {
            margin: 0;
            flex-grow: 1;
        }
        .task-actions {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        .task-actions i {
            font-size: 1.2rem;
            cursor: pointer;
        }
        .task-actions form {
            display: inline;
            margin: 0;
        }
        .mark-completed-button {
        background-color: green; /* Default green background for incomplete tasks */
        border: none; 
        color: white; /* White icon color */
        border-radius: 50%; /* Circular shape */
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s; /* Smooth transitions */
    }
    </style>
</head>
